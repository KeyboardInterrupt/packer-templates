{
  "variables": {
    "cloud_token": "{{ env `ATLAS_TOKEN` }}",
    "version": "0.0.{{timestamp}}",
    "vm_name": "packer-centos-7.5-x86_64",
    "compression_level": "9",
    "cpus": "1",
    "memory": "512",
    "disk_size": "4000",
    "iso_url": "https://mirrors.edge.kernel.org/centos/7.5.1804/isos/x86_64/CentOS-7-x86_64-NetInstall-1804.iso",
    "iso_checksum": "937bf0a7b0932817f84f7230f15ed88911bbbd85c0c958680792b7f8d8f9c1a9",
    "iso_checksum_type": "sha256",
    "ssh_timeout": "60m",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant"
  },
  "builders": [{
    "type": "qemu",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-centos-7.5-x86_64-{{build_type}}",
    "vm_name": "{{user `vm_name`}}",
    "disk_interface": "virtio-scsi",
    "disk_size": "{{user `disk_size`}}",
    "headless": false,
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc>",
      "<wait>",
      "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-7/anaconda-ks.cfg biosdevname=0 net.ifnames=0",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "{{user `ssh_username`}}",
    "ssh_password": "{{user `ssh_password`}}",
    "shutdown_command": "sudo systemctl poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"]
    ]
  }, {
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-centos-7.5-x86_64-{{build_type}}",
    "vm_name": "{{user `vm_name`}}",
    "disk_size": "{{user `disk_size`}}",
    "headless": false,
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc>",
      "<wait>",
      "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-7/anaconda-ks.cfg biosdevname=0 net.ifnames=0",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "{{user `ssh_username`}}",
    "ssh_password": "{{user `ssh_password`}}",
    "shutdown_command": "sudo systemctl poweroff",
    "hard_drive_interface": "sata",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/centos-7/repo.sh",
      "scripts/centos-7/virtualbox.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/centos-7/locale.sh",
      "scripts/centos-7/cleanup.sh",
      "scripts/common/minimize.sh"
    ]
  }],
  "post-processors": [
    [{
      "type": "vagrant",
      "compression_level": "{{user `compression_level`}}",
      "output": "centos-7.5-x86_64-{{.Provider}}.box"
    }]
  ]
}
